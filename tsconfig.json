{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "navigation/*": ["./src/navigation/*"],
      "screens/*": ["./src/screens/*"],
      "service/*": ["./src/service/*"],
      "store/*": ["./src/store/*"],
      "utils/*": ["./src/utils/*"],
      "interfaces/*": ["./src/interfaces/*"],
      "schemas/*": ["./src/schemas/*"]
    }
  }
}
